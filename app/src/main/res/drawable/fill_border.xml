<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#5ED36E" /> <!-- 반투명 검정색 (그림자) -->
        </shape>
    </item>

    <!-- 둥근 모서리 사각형 레이어 -->
    <item android:right="4dp" android:bottom="4dp"> <!-- 그림자의 오프셋 (그림자가 오른쪽 아래로 이동) -->
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>